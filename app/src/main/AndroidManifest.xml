<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xmx.androidframeworkbase">

    <!-- 基础模块（必须加入以下声明）START -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 基础模块 END -->
    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 实时通信模块、推送（若使用该功能，需添加以下声明）START -->
        <service android:name="com.avos.avoscloud.PushService" />

        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <!-- 实时通信模块、推送 END -->

        <receiver
            android:name=".Tools.PushMessage.ItemMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="com.avos.ITEM_MESSAGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".User.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tools.ChoosePhoto.AlbumActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tools.ChoosePhoto.BigPhotoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tools.ChoosePhoto.PhotoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tools.PushMessage.ReceiveMessageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Message.PushItemMessageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QRCode.CreateQRCodeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QRCode.ScanQRCodeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Data.SQL.SQLActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Data.Cloud.CloudActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Data.Sync.SyncActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ShoppingCart.OrderCodeActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".Services.MainService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>